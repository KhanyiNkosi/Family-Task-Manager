import React from "react";
import Link from "next/link";
import { usePathname } from "next/navigation";
import { useState, useEffect } from "react";

export default function ChildDashboardPage() {
  const pathname = usePathname();
  const [points, setPoints] = useState(1250);
  const [tasks, setTasks] = useState([
    { id: 1, title: "Hockey practice", points: 5, completed: false, category: "sports" },
    { id: 2, title: "Homework", points: 10, completed: true, category: "school" },
    { id: 3, title: "Clean room", points: 5, completed: false, category: "chores" },
  ]);

  // CHILD-ONLY NAVIGATION
  const navItems = [
    { href: "/", icon: "fas fa-home", label: "Home", active: false },
    { href: "/child-dashboard", icon: "fas fa-th-large", label: "My Dashboard", active: true },
    { href: "/child-profile", icon: "fas fa-user", label: "My Profile", active: false },
    { href: "/my-rewards", icon: "fas fa-gift", label: "My Rewards", active: false },
  ];

  // Filter tasks for TODO items
  const todoTasks = tasks.filter(task => !task.completed);

  // Simple permission guard
  useEffect(() => {
    const blockedRoutes = ["/parent-", "/rewards-store", "/ai-suggester", "/settings"];
    const currentPath = window.location.pathname;
    
    if (blockedRoutes.some(route => currentPath.includes(route))) {
      alert("Access denied! Parents only.");
      window.location.href = "/child-dashboard";
    }
  }, []);

  return (
    <div className="dashboard-container flex min-h-screen bg-gray-50">
      {/* Sidebar */}
      <aside className="sidebar bg-gradient-to-b from-[#006372] to-[#004955] text-white w-64 p-6 fixed h-screen">
        <div className="logo flex items-center gap-3 text-2xl font-extrabold mb-10">
          <i className="fas fa-smile text-3xl"></i>
          <span>FamilyTask</span>
        </div>

        <nav className="space-y-2">
          {navItems.map((item) => (
            <Link
              key={item.href}
              href={item.href}
              className={`flex items-center gap-3.5 px-4 py-3.5 rounded-xl transition-all ${
                pathname === item.href || item.active
                  ? "bg-white/20 text-white shadow-lg"
                  : "hover:bg-white/10 text-white/90"
              }`}
            >
              <i className={`${item.icon} w-5 text-center`}></i>
              <span className="font-medium">{item.label}</span>
            </Link>
          ))}
        </nav>

        <div className="mt-auto pt-6 border-t border-white/20 space-y-3">
          <button
            onClick={() => window.history.back()}
            className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-white/10 text-white/90 rounded-xl hover:bg-white/20 transition-all font-medium"
          >
            <i className="fas fa-arrow-left"></i>
            <span>Go Back</span>
          </button>
          
          <button
            onClick={() => {
              localStorage.clear();
              window.location.href = "/login";
            }}
            className="w-full flex items-center justify-center gap-2 px-4 py-3 bg-red-500/20 text-red-300 rounded-xl hover:bg-red-500/30 transition-all font-medium"
          >
            <i className="fas fa-sign-out-alt"></i>
            <span>Log Out</span>
          </button>
        </div>
      </aside>
      
      {/* Main Content */}
      <div className="main-content ml-64 p-8">
        <h1 className="text-3xl font-bold text-gray-800 mb-6">Child Dashboard</h1>
        <p className="text-gray-600 mb-8">Welcome! You have {points} points.</p>
        
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {/* Tasks Section */}
          <div className="bg-white rounded-xl shadow-lg p-6">
            <h2 className="text-xl font-semibold text-gray-800 mb-4">My Tasks</h2>
            <div className="space-y-3">
              {todoTasks.map((task) => (
                <div key={task.id} className="p-3 bg-blue-50 rounded-lg border border-blue-100">
                  <h3 className="font-medium text-gray-800">{task.title}</h3>
                  <p className="text-sm text-gray-600 mt-1">{task.points} points</p>
                </div>
              ))}
            </div>
          </div>
          
          {/* Rewards Section */}
          <div className="bg-white rounded-xl shadow-lg p-6">
            <h2 className="text-xl font-semibold text-gray-800 mb-4">My Rewards</h2>
            <p className="text-gray-600">Earn points by completing tasks!</p>
          </div>
          
          {/* Profile Section */}
          <div className="bg-white rounded-xl shadow-lg p-6">
            <h2 className="text-xl font-semibold text-gray-800 mb-4">My Profile</h1>
            <p className="text-gray-600">View and update your profile</p>
          </div>
        </div>
      </div>
    </div>
  );
}
